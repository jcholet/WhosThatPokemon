<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/tutorial_text_background"
            android:fontFamily="@font/font_pokemon"
            android:text="Crédits"
            android:textColor="#adc0b0"
            android:textSize="22sp" />

        <TextView
            android:background="@drawable/tutorial_text_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_pokemon"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="Développé par Jonas CHOLET"
            android:textColor="#adc0b0"
            android:textSize="22sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="348dp"
            android:layout_height="33dp"
            android:src="@drawable/logo_iut" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>