<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sorbierActivity"
    android:background="@drawable/rowan_gradient_background">

    <ImageView
        android:id="@+id/profSorbier"
        android:layout_width="270dp"
        android:layout_height="402dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/profsorbier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:background="@drawable/box"
        android:padding="2dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profSorbier">

        <View
            android:layout_width="18dp"
            android:layout_height="96dp"
            android:background="@drawable/box_gradient_left"/>

        <TextView
            android:id="@+id/sorbierText"
            android:padding="8dp"
            android:background="@color/white"
            android:textSize="13.5sp"
            android:layout_width="300dp"
            android:fontFamily="@font/font_pokemon"
            android:layout_height="96dp"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="537dp" />

        <View
            android:background="@drawable/box_gradient_right"
            android:layout_width="38dp"
            android:layout_height="96dp"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>