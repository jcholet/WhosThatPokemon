<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/competition_background">

    <ImageView
        android:id="@+id/backInHomeCompetition"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reponseCompetition"
        android:fontFamily="@font/font_pokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="4dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pokemonDisplayingCompetition">

        <ImageView
            android:id="@+id/cross1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/cross_icon" />

        <ImageView
            android:id="@+id/cross2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/cross_icon" />

        <ImageView
            android:id="@+id/cross3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/cross_icon" />

    </LinearLayout>



    <TextView
        android:id="@+id/scoreInARowCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/font_pokemon"
        android:text="Score : 0"
        android:textColor="#3264a7"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/backInHomeCompetition"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <View
        android:id="@+id/view"
        android:layout_width="250dp"
        android:layout_height="308.75dp"
        android:alpha="0.85"
        android:background="@drawable/glass_background"
        app:layout_constraintBottom_toBottomOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintEnd_toEndOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintStart_toStartOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintTop_toTopOf="@+id/pokemonDisplayingCompetition" />

    <ImageView
        android:id="@+id/pokemonDisplayingCompetition"
        android:layout_width="200dp"
        android:layout_height="247dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.251"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/answerPokemonCompetition"
        android:layout_width="256dp"
        android:layout_height="50dp"
        android:background="@drawable/glass_background"
        android:fontFamily="@font/font_pokemon"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="#3264a7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemonDisplayingCompetition"
        app:layout_constraintVertical_bias="0.673" />

</androidx.constraintlayout.widget.ConstraintLayout>